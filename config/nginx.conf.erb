daemon off;
# Heroku dynos have at least 4 cores.
worker_processes <%= ENV['NGINX_WORKERS'] || 4 %>;

events {
  use epoll;
  accept_mutex on;
  worker_connections <%= ENV['NGINX_WORKER_CONNECTIONS'] || 1024 %>;
}

http {

  log_format l2met 'measure#nginx.service=$request_time request_id=$http_x_request_id';
  access_log <%= ENV['NGINX_ACCESS_LOG_PATH'] || 'logs/nginx/access.log' %> l2met;
  error_log <%= ENV['NGINX_ERROR_LOG_PATH'] || 'logs/nginx/error.log' %>;

  # Must read the body in 5 seconds.
  client_body_timeout <%= ENV['NGINX_CLIENT_BODY_TIMEOUT'] || 5 %>;

  server {
		listen <%= ENV["PORT"] %>;
		keepalive_timeout 5;
            
                location = /compressiontest/gzip.html {
                        return 403;
                }

		location / {
                        proxy_set_header Accept-Encoding "";
			proxy_pass https://www.google.com/;
                        proxy_cookie_domain .google.com googpxy.herokuapp.com;
			proxy_http_version 1.1;
			proxy_buffering off;
                        sub_filter_types *;
                        sub_filter_once off;
			sub_filter 'www.google.com' 'googpxy.herokuapp.com';
			sub_filter 'apis.google.com' 'googpxy.herokuapp.com/proxy_apis_google_com';
			sub_filter 'ogs.google.com' 'googpxy.herokuapp.com/proxy_ogs_google_com';
			sub_filter 'id.google.com' 'googpxy.herokuapp.com/proxy_id_google_com';
			sub_filter 'www.gstatic.com' 'googpxy.herokuapp.com/proxy_www_gstatic_com';
			sub_filter 'play.google.com' 'googpxy.herokuapp.com/proxy_play_google_com';
		}

                location /proxy_play_google_com/ {
                        proxy_set_header Accept-Encoding "";
			proxy_pass https://play.google.com/;
                        proxy_hide_header Set-Cookie;
			proxy_http_version 1.1;
			proxy_buffering off;
                        sub_filter_types *;
                        sub_filter_once off;
			sub_filter 'apis.google.com' 'googpxy.herokuapp.com/proxy_apis_google_com';
			sub_filter 'ogs.google.com' 'googpxy.herokuapp.com/proxy_ogs_google_com';
			sub_filter 'id.google.com' 'googpxy.herokuapp.com/proxy_id_google_com';
			sub_filter 'www.gstatic.com' 'googpxy.herokuapp.com/proxy_www_gstatic_com';
			sub_filter 'play.google.com' 'googpxy.herokuapp.com/proxy_play_google_com';
		}

                location /proxy_www_gstatic_com/ {
                        proxy_set_header Accept-Encoding "";
			proxy_pass https://www.gstatic.com/;
                        proxy_hide_header Set-Cookie;
			proxy_http_version 1.1;
			proxy_buffering off;
                        sub_filter_types *;
                        sub_filter_once off;
			sub_filter 'apis.google.com' 'googpxy.herokuapp.com/proxy_apis_google_com';
			sub_filter 'ogs.google.com' 'googpxy.herokuapp.com/proxy_ogs_google_com';
			sub_filter 'id.google.com' 'googpxy.herokuapp.com/proxy_id_google_com';
			sub_filter 'www.gstatic.com' 'googpxy.herokuapp.com/proxy_www_gstatic_com';
			sub_filter 'play.google.com' 'googpxy.herokuapp.com/proxy_play_google_com';
		}

                location /proxy_apis_google_com/ {
                        proxy_set_header Accept-Encoding "";
			proxy_pass https://apis.google.com/;
                        proxy_hide_header Set-Cookie;
			proxy_http_version 1.1;
			proxy_buffering off;
                        sub_filter_types *;
                        sub_filter_once off;
			sub_filter 'apis.google.com' 'googpxy.herokuapp.com/proxy_apis_google_com';
			sub_filter 'ogs.google.com' 'googpxy.herokuapp.com/proxy_ogs_google_com';
			sub_filter 'id.google.com' 'googpxy.herokuapp.com/proxy_id_google_com';
			sub_filter 'www.gstatic.com' 'googpxy.herokuapp.com/proxy_www_gstatic_com';
			sub_filter 'play.google.com' 'googpxy.herokuapp.com/proxy_play_google_com';
		}

                location /proxy_ogs_google_com/ {
                        if ($args ~* (.*)(googpxy.herokuapp.com)(.*)) {
                            set $args $1www.google.com$3;
                            rewrite ^.*$ $1 redirect;
                        }

                        proxy_set_header Accept-Encoding "";
			proxy_pass https://ogs.google.com/;
                        proxy_hide_header Set-Cookie;
			proxy_http_version 1.1;
			proxy_buffering off;
                        sub_filter_types *;
                        sub_filter_once off;
			sub_filter 'apis.google.com' 'googpxy.herokuapp.com/proxy_apis_google_com';
			sub_filter 'ogs.google.com' 'googpxy.herokuapp.com/proxy_ogs_google_com';
			sub_filter 'id.google.com' 'googpxy.herokuapp.com/proxy_id_google_com';
			sub_filter 'www.gstatic.com' 'googpxy.herokuapp.com/proxy_www_gstatic_com';
			sub_filter 'play.google.com' 'googpxy.herokuapp.com/proxy_play_google_com';
		}

                location /proxy_id_google_com/ {
                        proxy_set_header Accept-Encoding "";
			proxy_pass https://id.google.com/;
                        proxy_hide_header Set-Cookie;
			proxy_http_version 1.1;
			proxy_buffering off;
                        sub_filter_types *;
                        sub_filter_once off;
			sub_filter 'apis.google.com' 'googpxy.herokuapp.com/proxy_apis_google_com';
			sub_filter 'ogs.google.com' 'googpxy.herokuapp.com/proxy_ogs_google_com';
			sub_filter 'id.google.com' 'googpxy.herokuapp.com/proxy_id_google_com';
			sub_filter 'www.gstatic.com' 'googpxy.herokuapp.com/proxy_www_gstatic_com';
			sub_filter 'play.google.com' 'googpxy.herokuapp.com/proxy_play_google_com';
		}
	}
}
